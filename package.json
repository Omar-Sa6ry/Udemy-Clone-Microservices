{
  "name": "udemy-clone",
  "version": "1.0.0",
  "description": "Udemy Clone Microservices Application",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "dev:up": "docker-compose -f infra/docker/dev/docker-compose.dev.yml up -d",
    "dev:down": "docker-compose -f infra/docker/dev/docker-compose.dev.yml down",
    "dev:logs": "docker-compose -f infra/docker/dev/docker-compose.dev.yml logs -f",
    "test": "npm run test --workspaces",
    "test:up": "docker-compose -f infra/docker/test/docker-compose.test.yml up -d",
    "test:down": "docker-compose -f infra/docker/test/docker-compose.test.yml down",
    "test:unit": "npm run test:unit --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "build": "npm run build --workspaces",
    "build:dev": "docker-compose -f infra/docker/dev/docker-compose.dev.yml build",
    "build:prod": "docker-compose -f infra/docker/prod/docker-compose.prod.yml build",
    "prod:up": "docker-compose -f infra/docker/prod/docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f infra/docker/prod/docker-compose.prod.yml down",
    "db:migrate": "npm run db:migrate --workspaces",
    "db:seed": "npm run db:seed --workspaces",
    "db:reset": "npm run db:reset --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "deps:check": "npm audit",
    "deps:update": "npm update --workspaces",
    "clean": "rm -rf node_modules && npm run clean --workspaces",
    "install:all": "npm install && npm run install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "graphql",
    "postgresql",
    "docker",
    "udemy-clone"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@bts-soft/core": "^1.9.4",
    "@course-plateform/common": "^1.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "pg": "^8.16.3"
  }
}
